{# .roles/docker/templates/openbmp/provisioning/datasources/conf.yml.j2       #}
---
# {{grafana.volumes|default('/var/grafana')}}/provisioning/datasources/conf.yml

apiVersion: 1

datasources:
  - name: {{openbmp_psql.container_name|default('openbmp_psql')}}
    isDefault: true
    type: postgres
    url: 172.17.0.1:5432
    database: {{openbmp_psql.env.pgdatabase|default('openbmp')}}
    user: {{openbmp_psql.env.pguser|default('openbmp')}}
    secureJsonData:
      password: {{openbmp_psql.env.pgpassword|default('openbmp')}}
    jsonData:
      sslmode: "require"      # disable/require/verify-ca/verify-full
      maxOpenConns: 0         # Grafana v5.4+
      maxIdleConns: 2         # Grafana v5.4+
      connMaxLifetime: 14400  # Grafana v5.4+
      postgresVersion: 1000   # 903=9.3, 904=9.4, 905=9.5, 906=9.6, 1000=10
      timescaledb: true

